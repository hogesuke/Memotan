<div id="global-nav-holder" class="absolute">
    <div id="global-nav">
        <div id="logo">
            <a href="./words"><img src="/images/Memotan.png"></a>
        </div>
        <ul>
            <li>
            </li>
        </ul>
        <div id="tool-holder">
            <ul>
                <li>
                <div id="create-word-btn" class="tool-btn web-icon-fontello">
                </div>
                </li>
                <li>
                    <div id="list-switch-btn" class="tool-btn web-icon-fontello open-btn">
                    </div>
                </li>
                <li>
                    <%= render :partial=>"common/search" %>
                </li>
                <li>
                    <div id="user-info">
                        <div id="user-icon">
                            <% if session[:provider] == "twitter" then %>
                                <img src="http://api.dan.co.jp/twicon/<%= session[:name] %>/mini">
                            <% else %>
                                <img src="https://graph.facebook.com/<%= session[:uid] %>/picture">
                            <% end %>
                        </div>
                        <div id="user-name">
                            <%= session[:name] %>
                        </div>
                    </div>
                </li>
                <li>
                    <%= link_to "ログアウト", { :controller => "login", :action => 'logout' } %>
                </li>
            </ul>
        </div>
    </div>
</div>
