<div class="word-card clearfix" word-id="<%= word_card.id %>" level="<%= word_card.learning_level.level %>">
    <div class="word-content">
        <div class="spelling">
            <%= word_card.spelling %>
        </div>
        <div class="level-status">
            <span class="level-label">
                Lv.<%= word_card.learning_level.level %>
            </span>
            <div class="lvProgressBar">
            </div>
        </div>
        <% description = word_card.description %>
        <div class="description<%= description.blank? || description == "NULL" ? " blank" : "" %>">
            <% if description.blank? || description == "NULL" %>
                <%= "(blank)" %>
            <% else %>
                <%= description %>
            <% end %>
        </div>
    </div>
    <div class="word-card-tags-holder">
        <span class="web-icon-fontello">1</span>
        <ul>
            <% word_card.tags.each do |t| %>
                <li class="tag-li">
                <%= t.label %>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="word-card-control-holder">
        <div class="word-card-control edit-btn">
            <span class="web-icon-fontello">7</span>
            <span>Edit</span>
        </div>
        <div class="word-card-control word-del-btn">
            <span class="web-icon-fontello">6</span>
            <span>Delete</span>
        </div>
    </div>
</div>
