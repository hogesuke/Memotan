var $wordCard = $("[word-id='<%= @word.id %>']");
$wordCard.after("<%= escape_javascript(render :partial => "word_card", :locals => {:word_card => @word}) %>");
$wordCard.remove();

var tagList = $("#tag-list-holder");
tagList.after("<%= escape_javascript(render :partial => "tag_list", :locals => {:tags => @tags, :all_words_count => @words_count}) %>");
tagList.remove();

window.parent.$.modal.close();

$("[word-id='<%= @word.id %>']").loadLevelProgressBar();
$('#word_submit').data('working', false);
